<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kicker Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Info", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li>@Html.ActionLink("Clients & orders", "Index", "Clients")</li>
                    @*<li>@Html.ActionLink("Delivery types", "Index", "DeliveryTypes")</li>*@
                    @*<li>@Html.ActionLink("Payment types", "Index", "PaymentTypes")</li>*@
                    @*<li>@Html.ActionLink("Payments", "Index", "Payments")</li>*@
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("New order", "Create", "Orders")</li>
                    @*<li>@Html.ActionLink("Orders details", "Index", "OrderDetails")</li>*@
                    <li>@Html.ActionLink("Order time stats", "OrderTimeStats", "Home")</li>
                    <li>@Html.ActionLink("Current user : " + @KickerShop.Global.GlobalVariables.CurrentUserName, "UserChoice", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year — Kicker Shop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
