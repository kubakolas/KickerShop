@model KickerShop.Models.ClientOrdersViewModel

@{
    ViewBag.Title = "Client orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Client orders</h2>


<div>
    <h4>Client data:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.client.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.client.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.client.Street)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.client.Street)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.client.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.client.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.client.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.client.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.client.Zip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.client.Zip)
        </dd>

    </dl>
</div>

<table class="table">
    <tr>
        <th>
            Order id
        </th>
        <th>
            Delivery type
        </th>
        <th>
            Payment
        </th>
        <th>
            Product
        </th>
        <th>
            Unit price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.orders)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delivery_type.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Unit_price)
            </td>
        </tr>
    }

    <div>
        @Html.ActionLink("Back to clients list", "Index")
    </div>
</table>
